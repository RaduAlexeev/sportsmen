{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "prettier/prettier": "error",
        "no-unused-vars": "error",
        "semi": "always",
        "indent": [
            "error",
            "tab"
        ],
        "quotes": "double",
        "comma-dangle": [
            "error",
            "never"
        ],
        "no-mixed-spaces-and-tabs": "error",
        "no-trailing-spaces": "error",
        "max-len": "code"
    }
}